{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "python.testing.pytestArgs": [
        ".",
        "--doctest-glob=*.py",
        "--doctest-modules"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "search.exclude": {
        "**./*.js": true,
        "**/.venv/**": true,
        "**/*.html": true
    },
    "notebook.formatOnSave.enabled": true,
    "files.exclude": {
        "**/*.js": true,
        "**/docs/searchindex.js": true,
        "**/searchindex.js": true
    },
    "editor.fontSize": 11,
    "debug.console.fontSize": 11,
    "scm.inputFontSize": 11,
    "terminal.integrated.fontSize": 11,
    "chat.editor.fontSize": 11,
    "editor.columnSelection": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.wordWrap": "off",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#192121",
        "activityBar.background": "#192121",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#8f308f",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#192121",
        "statusBar.background": "#030404",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#192121",
        "statusBarItem.remoteBackground": "#030404",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#030404",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#03040499",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#030404",
    "python.analysis.inlayHints.pytestParameters": true,
    "testExplorer.addToEditorContextMenu": true,
    "python.analysis.enablePytestExtra": true,
    "testExplorer.codeLens": false,
    "testExplorer.useNativeTesting": true,
    "black-formatter.path": [
        "pyproject.toml"
    ],
}